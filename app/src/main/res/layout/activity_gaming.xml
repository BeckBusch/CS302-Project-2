<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Project2_Imago.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/teal"
            android:elevation="4dp"
            android:title="Gaming Monitors"/>
<!--            app:popupTheme="@style/Theme.Project2_Imago.PopupOverlay" />-->

    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="54dp"
        android:padding="5dp"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/backButton"
            android:src="@drawable/back_button"
            android:onClick="goBack"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/searchBar"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:onClick="showSearchActivity"
            android:src="@drawable/search_bar"
            android:layout_marginHorizontal="10dp"/>

        <ImageView
            android:id="@+id/filterButton"
            android:src="@drawable/filter_button"
            android:layout_width="50dp"
            android:onClick="showFilterActivity"
            android:layout_height="50dp" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gamingRecycler"
        android:layout_width="match_parent"
        android:layout_height="627dp"
        android:layout_marginTop="114dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>